/* pages/pinGu_house/pinGu_house.wxss */
page{
  background-color: #eee;
}
.conts_addr{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;  
}
.detailAddr{
  width: 50rpx;
  height: 50rpx;
}
.conts_shenz{
  padding-left:10rpx;
}
.cont_sj{
  padding-left:10rpx;  
   padding-top: 16rpx; 
}
.cont_sj>view{
  border: 12rpx solid transparent;
  border-top: 12rpx solid #333;
}

.conts_title{
  padding-top: 40rpx;  
  display: flex;
  flex-direction: column;
  align-items: center; 
}
.conts_title>text:nth-of-type(1){
  font-size: 40rpx;
}
.conts_title>text:nth-of-type(2){
  font-size: 24rpx;
}

.conts_conta{
  background-color: #fff;
  margin: 60rpx auto;
  /* height: 600rpx; */
  width: 80%;
  border: 1px solid #ccc;
}
.conts_conta>view{
  height: 100rpx;
  padding: 30rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
}
.conts_conta>view:nth-last-child(1){
  border-bottom: 0;
}
.imgJiantou{
  width: 34rpx;
  height: 34rpx;
}
.picker{
  width:346rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.conts_btn{
   margin: 0 auto; 
  height: 100rpx; 
  width: 80%;
  border: 1px solid #ccc;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(162, 188, 245);
  border-radius: 50rpx;
  color: #fff;
  
}
.conts_tg{
  position: fixed;
  bottom: 0;
  color: #aaa;
   margin: 0 auto; 
  height:80rpx; 
    line-height: 80rpx;
  width:100%;
  font-size: 22rpx;
  text-align: center;

}